            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <footer class="navbar-fixed-bottom rodape">
            <p>Desenvolvido por <a href="http://paulorobertoelias.com">Paulo Roberto Elias</a></p>
        </footer>
    </div>
