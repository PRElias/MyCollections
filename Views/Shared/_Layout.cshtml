    <script src="docs/vendor/jquery.lazy-master/jquery.lazy.min.js"></script>
    <script src="docs/vendor/bootstrap/js/bootstrap.min.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css"
