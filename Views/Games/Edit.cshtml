@model MyCollections.Models.Game

@using (Html.BeginForm("Upsert", "Games", FormMethod.Post))
{
    <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <label class="form-label">Nome</label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <label class="form-label">Imagem atual</label>
            </div>
            <div class="col-md-4">
                <img src="../../docs/@Model.LogoURL" style="width: inherit;" />
            </div>
        </div>
    </div>
    <div class="form-group" id="divNewImage">
        <div class="row">
            <div class="col-md-4">
                <label class="form-label">Deseja salvar uma nova imagem?</label>
            </div>
            <div class="col-md-4">
                <input type="file" name="LogoURL" id="LogoURL" class="form-control" />
            </div>
        </div>
    </div>
    @if (Model.Store == "Steam")
    {
    <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <label class="form-label">Imagem original Steam</label>
            </div>
            <div class="col-md-4">
                <img style="width: inherit;" id="logoSteam"
                    src="http://media.steampowered.com/steamcommunity/public/images/apps/@Model.SteamApID/@Model.SteamOriginalImageURL" />
                <button type="button" class="btn btn-primary" id="btnUsarImagemSteam" onclick="usarImagemSteam()">Usar</button>
            </div>
        </div>
    </div>
    }
    <div class="form-group">
        <div class="row">
        <div class="col-md-4">
            <label class="control-label">Desabilitar jogo?</label>
        </div>
        <div class="col-md-4">
            <div class="form-check form-check-inline">
                @Html.RadioButtonFor(h => h.Disabled, "true", new { @class = "form-check-input" })
                @Html.LabelFor(h => h.Disabled, "Sim", new { @class = "form-check-label" })
                @Html.RadioButtonFor(h => h.Disabled, "false", new { @class = "form-check-input" })
                @Html.LabelFor(h => h.Disabled, "NÃ£o", new { @class = "form-check-label" })
            </div>
        </div>
        </div>
    </div>
    @* <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <label class="form-label">Sistema</label>
            </div>
            <div class="col-md-4">
                <input type="text" id="System" name="System" class="form-control" value="@Model.System" @(Model.Store == "Steam" ? "disabled='disabled'" : "") />
            </div>
        </div>
    </div> *@
    <div class="form-group">
        @Html.Hidden("SteamApID", @Model.SteamApID)
        @Html.Hidden("GameID", @Model.GameID)
        <div class="row">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <button type="button" class="btn btn-primary" onclick="deleteGame(@Model.GameID)">Excluir</button>
        </div>
    </div>
}