@model IEnumerable<MyCollections.Models.Game>

    <div id="overlay" class="coverAll">
        <img src="images/bannerBackgroundImage.gif" class="overlayGif" />
    </div>

    <div class="row">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="false" id="selectAll">
            <label class="form-check-label">Selecionar todos?</label>
        </div>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src=@item.LogoURL alt="Capa">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Store</p>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="false" id="@item.Name">
                    <label class="form-check-label" for="@item.Name">
                        Deseja incluir o jogo?
                    </label>
                </div>
            </div>
        </div>
        }
    </div>