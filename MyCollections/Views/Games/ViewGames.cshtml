@model IEnumerable<MyCollections.Models.Game>


<div id="main_div" class="main_div">
    @foreach (var item in Model)
    {
        <span id='@item.GameID' class='game'>
        <img class='cover' src='@item.Cover' alt='logo' data-game='@item.Name' data-toggle='modal' data-target='#myModal'>
        </span>
    }


</div>
